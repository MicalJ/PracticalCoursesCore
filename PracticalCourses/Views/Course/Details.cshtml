@model PracticalCourses.Models.CourseResponse
@using PracticalCourses.Infrastructure

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListaKategoriZawartosc">
   
    @await  Component.InvokeAsync("MenuCategories")

    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="@Url.Content("~/images/dommaly.png")" />
            <a href="link">
                Start > ASP.NET
            </a>
        </div>
        <section id="SekcjaKurs">
            <div id="KursLewa">
                <img src="@Url.PathToImagesCourses(Model.NameFileImage)" />
            </div>
            <div id="KursPrawa">
                <div id="KursNazwa">
                    <h1>
                        @Model.TitleCourse
                    </h1>
                    <h2>
                        @Model.AuthorCourse
                    </h2>
                </div>
                <div id="KursCena">
                    <div>
                        @string.Format("{0:0.##}", Model.PriceCourse)<span>PLN</span>
                    </div>
                    <a href="@Url.Action("AddToBasket", "Basket", new { id=Model.CourseId})"></a>
                </div>
                <div id="KursOpis">
                    @Model.DescriptionCourse
                </div>
                <div id="KursInfo">
                   @Model.ShortDescriptionCourse
                </div>

            </div>
        </section>
    </div>
</div>

